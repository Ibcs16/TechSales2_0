<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polo.techsales2_0">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:noHistory="false"
        android:excludeFromRecents="false"
        android:theme="@style/AppTheme">


        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- The meta-data element is needed for versions lower than 4.1 -->

        </activity>
        <activity android:name=".Main_Games" android:label="@string/app_name"/>
        <activity android:name=".Game_Activity" android:label="@string/app_name"/>
        <activity android:name=".Pesquisa_Activity" android:label="@string/app_name"
            android:parentActivityName="com.example.polo.techsales2_0.Main_Games">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.polo.techsales2_0.Main_Games" />
            </activity>

        <activity android:name=".Perfil_Usuario"
            android:label="@string/app_name"
            android:parentActivityName="com.example.polo.techsales2_0.Main_Games">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.polo.techsales2_0.Main_Games" />
        </activity>
    </application>

</manifest>